{
  "name": "sentimentflow-backend",
  "version": "1.0.0",
  "description": "Backend for SentimentFlow - prediction-driven trading on Aptos",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "worker": "ts-node src/worker.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.9.1",
    "@prisma/client": "^5.7.0",
    "aptos": "^1.22.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fastify": "^4.24.3",
    "node-cron": "^3.0.3",
    "prisma": "^5.7.0",
    "sentiment": "^5.0.2",
    "twitter-api-v2": "^1.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.25",
    "@types/node-cron": "^3.0.11",
    "@types/sentiment": "^5.0.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
