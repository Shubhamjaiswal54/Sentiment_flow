{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": false,           // optional: prevent dev annoyance
    "noUnusedParameters": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": false,          // ‚ùó must be false for CJS mode
    "noEmit": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,              // optional: avoid .d.ts spam
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
